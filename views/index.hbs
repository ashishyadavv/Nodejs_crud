<h3><a href="/api/people" class="btn btn-secondary"><i class="fa fa-plus"></i>Add New</a> User List</h3>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>UserId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each user}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.contact}}</td>
                <td>{{this._id}}</td>
                
                <td>
                    <a href="/api/people/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/api/people/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

